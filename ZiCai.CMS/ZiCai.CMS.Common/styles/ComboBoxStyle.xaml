<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <LinearGradientBrush x:Key="ComboBoxBackground" StartPoint="-0.518372,-1.80505" EndPoint="8.66124,-1.80505">
