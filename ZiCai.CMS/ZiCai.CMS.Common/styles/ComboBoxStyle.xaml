      <TransformGroup>
        <SkewTransform CenterX="-0.518372" CenterY="-1.80505" AngleX="61.9471" AngleY="0"/>
        <RotateTransform CenterX="-0.518372" CenterY="-1.80505" Angle="75.9736"/>
