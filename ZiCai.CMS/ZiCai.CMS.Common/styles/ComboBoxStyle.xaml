  <DataTemplate x:Key="SelectionBoxItemDataTemplate">
    <TextBlock>
    </TextBlock>
  </DataTemplate>

  <Style x:Key="ReadOnlyComboBoxItemStyle" TargetType="{x:Type ComboBoxItem}">
    <Setter Property="SnapsToDevicePixels" Value="true"/>
    <Setter Property="OverridesDefaultStyle" Value="true"/>
    <Setter Property="Focusable" Value="False"/>
    <Setter Property="FontFamily" Value="Arial, SimHei"/>
    <Setter Property="Foreground" Value="#4A0202"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ComboBoxItem}">
          <Border Name="Border" Background="#99D1C2B9">
            <ContentPresenter Margin="6,0,0,0">
              <!--<ContentPresenter.Content>
                <MultiBinding Converter="{StaticResource LocalizableValueConverter}">
                  <Binding Path="." />
                  <Binding Path="LanguageIndicator" Source="{x:Static Application.Current}"/>
                </MultiBinding>
              </ContentPresenter.Content>-->
            </ContentPresenter>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
              <Setter Property="Foreground" Value="#F2F2DA"/>
              <Setter TargetName="Border" Property="Background">
                <Setter.Value>
                  <LinearGradientBrush StartPoint="0.507872,-0.0172403" EndPoint="0.507872,0.98276">
                    <GradientStop Color="#FFB55600" Offset="0"/>
                    <GradientStop Color="#FF4C0000" Offset="0.995434"/>
                  </LinearGradientBrush>
                </Setter.Value>
              </Setter>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

